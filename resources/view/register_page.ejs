              <form action="<% if(editable) {%>/homeuserupdate<% }else {%>/register_auth <%}%>" method="post">
                <div class="row">
                  <div class="col-xs-12">
                    <div class="check-title">
                     <% if(editable) {%> 
                      <h4>Edit Profile</h4>
                      <% }else{%>
                      <h4>New Customer</h4>
                      <% }%> 
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <label>First Name:</label>
                    <div class="input-text">
                      <input type="text" name="fname"
                       value="<%if(editable){%><%=data.fname%><%}%>"
                      class="form-control">
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <label>Last Name:</label>
                    <div class="input-text">
                      <input type="text" name="lname" 
                      value="<% if(editable){%><%=data.lname%><%}%>"
                      class="form-control">
                    </div>
                  </div>

                  <div class="col-sm-12">
                    <label>Email:</label>
                    <div class="input-text">
                      <input type="email" name="email" 
                      value="<% if(editable){%><%=data.email%><%}%>"
                      class="form-control">
                    </div>
                    
                  </div>
                  <% if(editable){%> 
                    <div class="col-xs-12">
                      <label></label>
                      <div class="input-text">
                        <input type="hidden" name="jjkk" 
                        value=""
                        class="form-control">
                      </div>
                    </div>
                    <% }else {%>
                      <div class="col-xs-12">
                        <label>Password:</label>
                        <div class="input-text">
                          <input type="password" name="password" 
                          value=""
                          class="form-control">
                        </div>
                      </div>
                  <%}%>

                  
                  <div class="col-xs-12">
                    <label>Address:</label>
                    <div class="input-text">
                      <input type="text" name="address" 
                      value="<%if(editable){%><%=data.address%><%}%>"
                      class="form-control">
                    </div>
                  </div>
                  <div class="col-xs-12">
                    <label>City/Town:</label>
                    <div class="input-text">
                      <input type="text" name="city" 
                      value="<% if(editable){%><%=data.city%><%}%>"
                      class="form-control">
                    </div>
                  </div>
                  <% if(editable) {%> 
                    <div class="col-sm-6">
                      <label>Phone:</label>
                      <div class="input-text">
                        <input type="text" name="phone" 
                         value="<%= data.phone %>"
                        class="form-control">
                      </div>
                    </div>
                    <% }else {%>
                      <div class="col-sm-6">
                        <label>Phone:</label>
                        <div class="input-text">
                          <input type="text" name="phone" 
                           value="<%=phone %>"
                          class="form-control" readonly>
                        </div>
                      </div>
                  <%}%>

                  <% if(editable) {%> 
                    <div class="col-sm-6">
                      <label></label>
                      <div class="input-text">
                        <input type="hidden" name="otpv" 
                        value=""
                        class="form-control" placeholder="verify OTP">
                      </div>
                    </div>
                    <% }else {%>
                      <div class="col-sm-6">
                        <label>otp:</label>
                        <div class="input-text">
                          <input type="text" name="otpv" 
                          value=""
                          class="form-control" placeholder="verify OTP" required>
                        </div>
                      </div>
                  <%}%>
                  
                 
                  <div class="col-xs-12">
                   <!--  <div class="billing-checkbox">
                      <input type="checkbox" value="forever" id="rememberme" name="rememberme">
                      Sign up for our newsletter! </div> -->
                    <div class="submit-text" style="margin-top: 10px;">
                      <input type="hidden" name="id" value="<%if(editable){%><%=data._id%><%}%>" >
                      <% if (otp) { %>
                        <input type="hidden" name="otp" value="<%=otp%>">
                      <% } %>
                     
                      <% if(editable) {%> 
                        <button class="button"><i class="fa fa-user"></i>&nbsp; <span>Update</span></button>
                        <% }else {%>
                      <button class="button"><i class="fa fa-user"></i>&nbsp; <span>Register</span></button>
                      <%}%>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
