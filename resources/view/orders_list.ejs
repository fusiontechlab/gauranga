<body class="cms-index-index cms-home-page">

  <!-- Breadcrumbs -->
  <div class="breadcrumbs">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <ul>
            <li class="home"> <a title="Go to Home Page" href="index.html">Home</a><span>&raquo;</span></li>
            <li><strong>Orders List</strong></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- Breadcrumbs End --> 
  <!-- Main Container -->
  <section class="main-container col2-right-layout">
    <div class="main container">
      <div class="row">
        <div class="col-main col-sm-9 col-xs-12">
          <div class="my-account">
            <div class="page-title">
              <h2>Orders List</h2>
            </div>
         
            
              
            <div class="orders-list table-responsive"> 
              <!--orders list table-->
              <table class="table table-bordered cart_summary table-striped">
                <thead>
                  <tr> 
                    <!--titles for td-->
                    <th>Order Number</th>
                    <th>Order Time</th>
                    <th>Order Date</th>
                    <th>Order Phone</th>
                    <th>Order Address</th>
                    <th>Order Status</th>
                    <th>Order Item</th>
                    <th>Order price</th>
                    <th>Order Image</th>
                    <th>Order Charge</th>
                 
                    <th>Total</th>
                  </tr>
                </thead>
                <tbody>
                 
                  <% if (orders.length>0) { %>
                   
                   
                   <% orders.forEach(order => { %>
                   
                    
                    <tr> 
                      <!--order number-->
                      <td data-title="Order Number"><a href="#" class="order-number"><%= order._id %> </a></td>
                      <!--order date-->
                      <td data-title="Order Date"><%=moment(order.createdAt).format('hh:mm A')%></td>
                      <td data-title="Order Date"><%=moment(order.createdAt).format('DD / MM / YYYY')%></td>
                      <td data-title="Order Address"><%=order.phone%></td>
                      <td data-title="Order Address"><%=order.address%></td>
                     
                      <td data-title="Order Status"><%=order.status%></td>
                      <% order.items.forEach(order => { %>
                        
                      <td data-title="Order title"><%=order.title%></td>
                      <td data-title="Order price"><%=order.price%></td>
                          
                      <td data-title="Order Image"><img src="<%=order.image[0]%>" alt="" srcset=""></td>
                      <!-- <td data-title="Order price"><%=order.price%></td> -->
                    
                      <% }) %>
                      <!-- <td data-title="Order total"><%=order.total%></td> -->
                      <td data-title="Order total"><%=order.chargeprice%></td>
                      <td data-title="Order total"><%=order.totalAmount%></td>
                      
                      <% if (order.deliveryStatus==true) { %>
                        <td> <button type="button" ><a  class="clearcart btn btn-danger"  href="/deliveredstatus/<%= order._id %>">cancel</a></button></td>
                        
                      <% } else{%>
                        <td> <button type="button" class=" btn btn-danger" ><a href="/deliveredstatus/<%= order._id %>">cancelled</a></button></td>
                        <%}%>
                 
                    
                   
                    </tr>
                  <% }) %>

                
                 
                  <% } else{%>
                       <tr>orders not found</tr>
                  <%}%>
                 
               

                </tbody>
              </table>
            </div>
          </div>
        </div>
        <aside class="right sidebar col-sm-3 col-xs-12">
          <div class="sidebar-account block">
            <div class="sidebar-bar-title">
              <h3>My Account</h3>
            </div>
            <div class="block-content">
              <ul>
                <li ><a href="/loggedUser"><i class="uil uil-apps"></i> Overview</a></li>
                <li class="current"><a href="/orderlist"><i class="uil uil-box"></i>My Orders</a></li>
                <li><a href="/wishlist"><i class="uil uil-heart"></i> My Wishlist</a></li>
                <li><a href="/address"><i class="uil uil-location-point"></i> My Address</a></li>
                <li><a href="/logout"><i class="uil uil-exit"></i> Logout</a></li>
              </ul>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>
  <!-- service section -->
  <div class="jtv-service-area">
    <div class="container">
